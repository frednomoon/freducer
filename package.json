{
  "name": "freducer",
  "version": "3.1.0",
  "description": "Flexbile code for asyncronous reducer functions",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "test": "jest --env=node",
    "testwatch": "yarn test --watch",
    "prebuild": "yarn test",
    "build": "tsc src/index.ts --outDir dist -d true",
    "prepublish": "yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frednomoon/freducer.git"
  },
  "author": "Fred Shepherd - fmbshepherd@gmail.com",
  "license": "ISC",
  "dependencies": {
    "type-to-reducer": "^1.1.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "jest": "^23.4.1",
    "ts-jest": "^23.0.1",
    "typescript": "^3.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}